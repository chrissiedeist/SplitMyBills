<% var button_text = bill.id ? "Update Bill" : "Create Bill" %>


  <form 
        class="<%= bill.id ? "" : "add-bill"  %> hidden bill-form
        form-horizontal" 
        data-id="<%= bill.id ? bill.id : "0" %>" role="form">

    <div class="form-group">
      <label class="col-md-2 control-label">Date:</label>
      <div class="col-md-6">
        <input type="date" class="form-control"name="bill[date]" id=""
        value="<%= bill.escape('date')%>" />
      </div>
      
    </div>

    <div class="form-group">
      <label class="col-md-2 control-label">Bill Name:</label>
        <div class="col-md-6">
          <input type="text" class="form-control" name="bill[name]" id=""
          value="<%= bill.escape('name') %>"/>
        </div>
    </div>

    <div class="form-group">
      <label class="col-md-2 control-label">Bill Amount:</label>
      <div class="col-md-6">
        <input type="number" class="form-control" name="bill[amount]" id=""
       value="<%=bill.escape('amount') %>"/>
     </div>
    </div>

    <div class="form-group">
      <label class="col-md-2 control-label">With:</label>
      <div class="debtor-selects"></div>
    </div>
      
      
      <a class="add-debtor btn btn-primary btn-sm" type="submit">Add
      Payee</a>
    <button class="<%= bill.id ? "update-bill" : "create-bill"  %> submit-bill btn btn-primary btn-sm" type="submit">
      <%=button_text %>
    </button>

    <button class="cancel-bill btn btn-danger btn-sm" type="submit">
      Cancel
    </button>
  </form>





