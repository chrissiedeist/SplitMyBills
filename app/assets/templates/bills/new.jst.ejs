<form class="add-bill hidden" >
  <label>Date: 
    <input type="date" name="bill[date]" id="" value="" />
  </label>

  <label>Bill Name: 
    <input type="text" name="bill[name]" id="" />
  </label>

  <label>Bill Amount: 
    <input type="number" name="bill[amount]" id=""/>
  </label>
  <select name="debtors_bills[debtor_ids][]" id="">
    <% friends.forEach(function(friend) { %>
      <option value="<%= friend.get('id') %>">
        <%= friend.escape('name')%>
      </option>
    <% }) %>
  </select>
    
  <button class="create-bill" type="submit">Create Bill</button>
</form>
<button class="add-bill" type="submit">Add Bill</button>



