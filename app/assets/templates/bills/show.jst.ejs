<td>

  <h4><a class="bill-link" href="#"><%= bill.escape('date') %>: <%=
      bill.escape('name') %></a>
    
    <span class="pull-right">
    <% debtor = (bill.escape('net_to_current_user') > 0) %>
    (<%= debtor ? "You're owed" : "You owe"  %>
    <span class="<%= debtor ? 'text-success' : 'text-failure' %>">
      <%=
      accounting.formatMoney(Math.abs(bill.escape('net_to_current_user'))) %>
    </span>)
  </span>
  
  </h4>

  <div class="bill-show hidden" data-id="<%= bill.get('id') %>" class"is-active" >
    <div>Paid by <%= bill.escape('creditor') %></div>
    <div>Amount: <%= accounting.formatMoney( bill.escape('amount') )%></div>

    <ul>
      <% bill.debtorsBills().forEach(function(debt){ %>
      <li>
        <%= debt.escape('debtor') %> owes <%=
        accounting.formatMoney(debt.escape('amount_owed'))%> 
        <a class="mark-paid" data-id="<%= debt.escape('id') %>" href="#">
            
            <%= (debt.escape('paid') === "unpaid") ? "Mark paid" : "Mark unpaid" %>
        </a>
      </li>
      <% }) %>
    </ul>

