<div class="row">
  
  <h1>
    Welcome, <%= user.escape('name') %>!
  </h1>

</div>
<div class="row">
  <div class="col-md-6 col-offset-md-2">
    
    <h2>
      <% debtor = (user.escape('net_balance') > 0) %>
      <%= debtor ? "You're owed" : "You owe"  %>
      <span class="<%= debtor ? 'text-success' : 'debit' %>">
        <%= accounting.formatMoney(Math.abs(user.escape('net_balance')))
        %></span>
    
    </h2>
  </div>
    
  
</div>


