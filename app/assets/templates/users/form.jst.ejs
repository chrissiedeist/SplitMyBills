<form class="email-friend-form form-horizontal" role="form">

  <div class="form-group">
    <label class="col-md-2 control-label" for="email" >Email:</label>
    <div class="col-md-6">
      <input type="text" class="form-control"
      id="email"
      name="email[address]"  />
    </div>
  </div>

  <div class="form-group">
    <label for="message"  class="col-md-2 control-label">Message:</label>
    <div class="controls col-md-6">
      <textarea name="email[message]" id="message" rows="7" cols="80"
        >Join me on SplitMyBills!</textarea>
    </div>
  </div>
</form>





