  <form class="hidden email-friend-form form-horizontal" role="form">

    <div class="form-group">
      <label class="col-md-2 control-label" for="email" >Email:</label>
      <div class="col-md-6">
        <input type="text" class="form-control"name="bill[date]"
        id="email"
        value="<%= bill.escape('date')%>" />
      </div>
    </div>

    <div class="form-group">
      <label for="message"  class="col-md-2 control-label">Message:</label>
      <div class="controls col-md-6">
        <textarea name="email[message]" id="message" rows="8" cols="40"></textarea>
      </div>
    </div>
      
    <button class="email-friend-btn btn btn-primary btn-sm" type="submit">
      Send
    </button>

    <button class="cancel-bill btn btn-danger btn-sm" type="submit">
      Cancel
    </button>
  </form>





